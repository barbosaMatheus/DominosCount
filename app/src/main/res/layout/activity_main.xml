<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matheus.w08_barbosa_matheus.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count_label"
        android:layout_alignParentStart="true"
        android:textSize="36sp"
        android:layout_alignParentEnd="true"
        android:gravity="right" />

    <Button
        android:text="5"
        android:layout_height="50dp"
        android:id="@+id/five"
        android:layout_width="50dp"
        android:layout_below="@+id/one"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:onClick="onClick" />

    <Button
        android:text="6"
        android:layout_height="50dp"
        android:id="@+id/six"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/five"
        android:layout_alignBottom="@+id/five"
        android:layout_alignStart="@+id/two"
        android:onClick="onClick" />

    <Button
        android:text="7"
        android:layout_height="50dp"
        android:id="@+id/seven"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/six"
        android:layout_alignBottom="@+id/six"
        android:layout_alignStart="@+id/three"
        android:onClick="onClick" />

    <Button
        android:text="8"
        android:layout_height="50dp"
        android:id="@+id/eight"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/seven"
        android:layout_alignBottom="@+id/seven"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:text="10"
        android:layout_height="50dp"
        android:id="@+id/ten"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/nine"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignStart="@+id/six"
        android:onClick="onClick" />

    <Button
        android:text="11"
        android:layout_height="50dp"
        android:id="@+id/eleven"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/nine"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignStart="@+id/seven"
        android:onClick="onClick" />

    <Button
        android:text="12"
        android:layout_height="50dp"
        android:id="@+id/twelve"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/nine"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:text="1"
        android:layout_height="50dp"
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_below="@+id/count_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:onClick="onClick" />

    <Button
        android:text="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/two"
        android:layout_marginStart="42dp"
        android:layout_alignBaseline="@+id/one"
        android:layout_alignBottom="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:onClick="onClick" />

    <Button
        android:text="4"
        android:layout_height="50dp"
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:text="3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/three"
        android:layout_alignBaseline="@+id/four"
        android:layout_alignBottom="@+id/four"
        android:layout_toEndOf="@+id/two"
        android:layout_marginStart="42dp"
        android:onClick="onClick" />

    <Button
        android:text="9"
        android:layout_height="50dp"
        android:id="@+id/nine"
        android:layout_width="50dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/eight"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ten"
        android:layout_toStartOf="@+id/ten"
        android:layout_marginTop="43dp"
        android:id="@+id/clear"
        android:onClick="onClick" />

    <Button
        android:text="Undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clear"
        android:layout_alignParentEnd="true"
        android:id="@+id/undo"
        android:onClick="onClick" />

</RelativeLayout>
